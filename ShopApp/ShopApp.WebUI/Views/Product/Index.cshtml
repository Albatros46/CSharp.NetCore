@model Product
<!--Modelin bulunduğu yer _ViewImport ile berlitildiği için direkt objenin adını yazmak yeterli-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    @await Html.PartialAsync("_Navbar")
    <h2>Product/Index</h2>
    <h3>@ViewData["Category"]</h3>
    <!--_ViewImports a model in tam tolunu girdikten sonra asagidaki gibi model içindeki verileri çekebiliriz-->
    <p>ViewImports a model in tam tolunu girdikten sonra asagidaki gibi model içindeki verileri çekebiliriz</p>
    <p>ViewData ile veri aktarımı</p>
    <h3>@(((Product)ViewData["Product"]).Name)</h3>
    <h3>@(((Product)ViewData["Product"]).Price)</h3>
    <h3>@(((Product)ViewData["Product"]).Description)</h3>

    <p>ViewBag ile veri aktarımı</p>
    <h3>@(((Product)ViewBag.Product).Name)</h3>
    <h3>@(((Product)ViewBag.Product).Price)</h3>
    <h3>@(((Product)ViewBag.Product).Description)</h3>

    <p>ViewBag diğer kullanımı</p>
    <h3>@ViewBag.Product.Name</h3>
    <h3>@ViewBag.Product.Price</h3>
    <h3>@ViewBag.Product.Description</h3>

    <p>Model ile veri goruntuleme</p>
    <h3>@Model.Name</h3>
    <h3>@Model.Price</h3>
    <h3>@Model.Description</h3>
</body>
</html>